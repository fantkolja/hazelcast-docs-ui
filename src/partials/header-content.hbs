<header class="header">
  <nav class="navbar navbar-brand">
    <div class="navbar-start">
      <a class="navbar-item navbar-logo-item" href="/">
        <img class="navbar-logo-item-img" src="{{{uiRootPath}}}/img/hazelcast-logo-white.png" alt="Hazelcast Logo" />
      </a>
      <p class="navbar-item navbar-app-title">
        Documentation
      </p>
    </div>

    <div class="navbar-end">
      {{#if (and (not-eq page.layout 'home') (not-eq page.layout 'tutorials-landing') (not-eq page.component.name 'imdg'))}}
        <button id="kapa-search-btn" class="kapa-search-btn">
          <i data-feather="search" class="kapa-search-icon"></i>
        </button>
      {{else}}
        <a href="https://hazelcast.com/?utm_source=docs-website" class="hazelcast-link" target="_blank">
          hazelcast.com
        </a>
      {{/if}}
      {{#if (eq page.component.name 'cloud')}}
        <a class="navbar-item" href="{{{page.attributes.cloud-console}}}sign-up" target="_blank">
          <button class="button navbar-button">Try Free</button>
        </a>
      {{else}}
        <a class="navbar-item get-hazelcast-link" href="https://hazelcast.com/get-started/?utm_source=docs-website" target="_blank">
          <button class="button navbar-button">Get Hazelcast</button>
        </a>
      {{/if}}
    </div>
  </nav>
  {{> cookie}}
</header>
